<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/transparent">
    >
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/transparent">
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:elevation="5dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:background="@drawable/account"/>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="-65dp"
        android:layout_gravity="center"
        android:background="@drawable/bgbtncancel"
        android:elevation="3dp">

        <TextView
            android:id="@+id/intro_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:text="Task Reminder"
            android:fontFamily="cursive"
            android:layout_gravity="center"
            android:textColor="@color/colorAccent"
            android:textSize="32dp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/login_username"
            android:inputType="text"
            android:textColorHint="@color/secondaryBlack"
            android:textColor="@color/colorPrimaryDark"
            android:hint="Enter Username"
            android:drawableLeft="@drawable/ic_username"
            android:maxLength="30"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bginputtask"
            android:paddingLeft="15dp"
            android:layout_gravity="center"/>
        <EditText
            android:id="@+id/login_pin"
            android:inputType="numberPassword"
            android:textColorHint="@color/secondaryBlack"
            android:textColor="@color/colorPrimaryDark"
            android:hint="Enter 4 digit PIN"
            android:drawableLeft="@drawable/ic_pin"
            android:maxLength="4"
            android:paddingLeft="15dp"
            android:background="@drawable/bginputtask"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btn_login"
            android:layout_marginTop="20dp"
            android:text="Login "
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:background="@drawable/btn_edit"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:stateListAnimator="@null"
            />
        <TextView
            android:padding="5dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Forgot Pin?"
            android:textAlignment="center"
            android:textColor="@color/green"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_gravity="end"
            android:id="@+id/forgot_password"
            />

        <TextView
            android:id="@+id/txt_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="20dp"
            android:padding="5dp"
            android:text="Not Yet Registerd? Click Here."
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            />
    </LinearLayout>
</LinearLayout>
</ScrollView>
