<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardBackgroundColor="@android:color/white"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:id="@+id/cardview"
    card_view:cardCornerRadius="3dp">
    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:background="@drawable/recyclerview_item_selected"
        android:layout_height="wrap_content">

        <ImageView android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentStart="true"
            android:id="@+id/thumbnail_image"/>


        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/selected"
            android:id="@+id/selected_image"/>


        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-2dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:layout_toStartOf="@id/active_image"
            android:layout_toEndOf="@+id/thumbnail_image"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/recycle_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:maxLines="2"
                android:text="Title"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/recycle_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:maxLines="7"
                android:text="Description"
                android:textColor="@color/secondaryBlack"
                android:textSize="15sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/light_grey"
            android:layout_marginStart="15dp"
            android:id="@+id/view"
            android:layout_below="@id/linear_layout"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="15dp"
            android:id="@+id/linear1"
            android:layout_marginTop="15dp"
            android:layout_below="@id/view"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp">
            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-condensed-light"
                android:src="@drawable/ic_date"/>
            <TextView
                android:id="@+id/recycle_date"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linear_layout"
                android:textColor="@color/secondaryBlack"
                android:text="Date"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:id="@+id/linear2"
            android:layout_toEndOf="@id/linear1"
            android:layout_marginTop="15dp"
            android:layout_below="@id/view"
            android:layout_marginBottom="10dp">
            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-condensed-light"
                android:src="@drawable/ic_access_time"/>
            <TextView
                android:id="@+id/recycle_time"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:layout_toEndOf="@id/recycle_date"
                android:textColor="@color/secondaryBlack"
                android:layout_below="@+id/linear_layout"
                android:layout_marginStart="5dp"
                android:text="Time"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:id="@+id/linear3"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@id/linear2"
            android:layout_below="@id/view"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp">
            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_repeat"/>
            <TextView
                android:id="@+id/recycle_repeat_info"
                android:layout_width="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:textColor="@color/secondaryBlack"
                android:layout_below="@+id/view"
                android:layout_toEndOf="@id/recycle_time"
                android:text="Off"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/active_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_notifications_off" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
